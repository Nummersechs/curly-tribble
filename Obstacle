package projektooneu;

import java.awt.Color;

public class Obstacle extends Rectangle{
	private int startX;
	private int speed;
	private Color color;
	
	public Obstacle(int x, int y, int width, int height) {
		super(x, y, width, height);
		this.startX = x;
		this.speed = 10;
	}
	
	public Obstacle(int x, int y, int width, int height,Color color) {
		super(x, y, width, height);
		this.startX = x;
		this.color = color;
		this.speed = 10;
	}
	
	public Obstacle(int x, int y, int width, int height, int speed) {
		super(x, y, width, height);
		this.startX = x;
		this.speed = speed;
	}
	
	public Obstacle(int x, int y, int width, int height,Color color, int speed) {
		super(x, y, width, height);
		this.startX = x;
		this.color = color;
		this.speed = speed;
	}	
	
	public int getStartX(){
		this.x = this.startX;
		return this.startX;
	}

	@Override
	public int getX(){
		return this.x;
	}

	@Override
	public void setX(int x){
		this.x = x;
	}
	
	public int getNewX() {
		return this.x - this.speed;
	}

	@Override
	public int getY() {
		return this.y;
	}

	@Override
	public void setY(int y){
		this.y = y;
	}

	@Override
	public int getWidth(){
		return this.width;
	}

	@Override
	public void setWidth(int width){
		this.width = width;
	}

	@Override
	public int getHeight(){
		return this.height;
	}

	@Override
	public void setHeight(int height){
		this.height = height;;
	}

	@Override
	public Color getColor(){
		return this.color;
	}

	@Override
	public void setColor(Color color){
		this.color = color;
	}
	
	public int getSpeed(){
		return this.speed;
	}
	
	public void setSpeed(int speed){
		this.speed = speed;
	}

}
